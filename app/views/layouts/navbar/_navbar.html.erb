<div class="navbar">
  <% if user_signed_in? %>
    <div class="navbar-routes">
      <%= link_to "Home", root_path, class:"navbar-link" %>
      <%= link_to "Categories", user_groups_path(current_user), class:"navbar-link" %>
      <%= link_to "Transactions", user_entities_path(current_user), class:"navbar-link" %>
    </div>
    <div class="navbar-actions">
      <%= button_to "Sign-Out", destroy_user_session_path, method: :delete%>
    </div>
  <% else %>
    <div class="navbar-routes">
      <%= link_to "Home", user_groups_path, class:"navbar-link" %>
      <%= button_to "Log-In", new_user_session_path, class:"navbar-link" %>
      <%= link_to "Sign-Up", new_user_registration_path, class:"navbar-link" %>
    </div>
  <% end %>
</div>