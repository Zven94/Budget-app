<p style="color: green"><%= notice %></p>

<%= render @group %>

<h2>Transactions for this Group</h2>
<ul>
  <% @group.entities.each do |entity| %>
    <li>
      <%= entity.name %> - Amount: <%= entity.amount %>
    </li>
  <% end %>
</ul>

<div>
  <%= link_to "Edit this group", edit_user_group_path(@group) %> |
  <%= link_to "Back to groups", user_groups_path %>

  <%= button_to "Delete this group", user_group_path(@group), method: :delete, data: { confirm: "Are you sure you want to delete this group?" } %>
</div>
